/*--------------------------------------------------------------------
*
* LAYOUT
*
--------------------------------------------------------------------*/

// Sticky footer
.shell
  display: flex
  min-height: 100vh
  flex-direction: column

.page-wrapper,
.page-wrapper-expanded
  flex: 1
  
.page,
.page-wrapper,
.page-wrapper-expanded,
.page-wrapper-full
  flex: 1
  
.page
  position: relative
  top: 69px
  height: 100%
  overflow-y: scroll
  
.page-heading
  margin-left: $ui-spacing-double

// Sidebar reappearance and page shifting  
.page, .page-wrapper, .page-wrapper-expanded
  h2:first-of-type
    margin-top: $ui-spacing-half
    
// Center children vertically
.vertical-center
  display: flex
  align-items: center
  justify-content: center

// Floats
.fl-left
  float: left

.fl-right
  float: right