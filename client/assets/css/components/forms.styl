/*--------------------------------------------------------------------
*
* FORMS
*
--------------------------------------------------------------------*/

// Shared
input, select
  border: $ui-border
  border-radius: $ui-radius
  padding: $ui-spacing-third
  transition: all .3s ease-in
  
  &:focus
    border: 1px solid $blue-light
    box-shadow: 0 0 5px $blue-light
    outline: none

// Inputs
input
  margin-right: $ui-spacing-third

.input-large
  padding: $ui-spacing-half $ui-spacing-third
  
// Form panel
.form-panel
  padding: $ui-spacing
  border: $ui-border
  border-radius: $ui-radius
  
// Full width form
.form-full-width

  input, input[type=search], .btn
    width: 100%
    margin-bottom: $ui-spacing-third
    
// Selects
select
  height: 48px
  min-width: 150px
  cursor: pointer
  background-color: white
  
// Search
input[type="search"]
  width: 100%

@media screen and (max-width: 30em)

  input[type=search]
    box-sizing: border-box
    margin-bottom: $ui-spacing-third
    
  select,
  input[type=search]
    width: 100%
