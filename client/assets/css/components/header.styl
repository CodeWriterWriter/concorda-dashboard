* HEADER
*
--------------------------------------------------------------------*/

header
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 69px
  padding: $ui-spacing-half 0
  background-color: $green-dark
  z-index: 10
  
  h2, a
    color: white
    
@media screen and (max-width: 48em)

  header
    .has-icon h2, li span:not(.icon)
      display: none
      
    li:last-child .icon
      margin-right: 0