/*--------------------------------------------------------------------
*
* BASIC STYLES
*
--------------------------------------------------------------------*/

// Box sizing
*, *:after, *:before
  box-sizing: border-box

// Selection highlight
::-moz-selection
  background-color: $green-lighter

::selection
  background-color: $green-lighter

// Paragraphs
p
  margin-top: 0
  margin-bottom: $ui-spacing

// Links
a
  color: $green
  text-decoration: none
  cursor: pointer
  
  &:hover
    color: $green-light
  &:focus
    outline: none

// Clearfix
.cf:before,
.cf:after
  content: " "
  display: table

.cf
  &:after
    clear: both

// Media
img, iframe, video
  max-width: 100%


.no-href
  color: black
  text-decoration: none

  &:hover
    color: black
    text-decoration: underline