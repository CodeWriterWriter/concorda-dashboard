/*--------------------------------------------------------------------
*
* TABLES
*
--------------------------------------------------------------------*/

table
  width: 100%
  overflow-x: scroll
  border-collapse: collapse
  
th
  text-align: left
  background-color: lighten($gray-lighter, 70%)
  
td, th
  padding: $ui-spacing-third
  border-bottom: $ui-border
  
@media screen and (max-width: 48em)

  table, thead, tbody, th, td, tr
    display: block
    
  thead tr
    position: absolute
    top: -9999px
    left: -9999px
  
  table  
  
    td
      border: none
      border-bottom: $ui-border
      position: relative
      padding-left: 50%
      
    tr:last-of-type td
      border-bottom: none
      
    td:before
      position: absolute
      top: $ui-spacing-third
      left: $ui-spacing-half
      width: 45%
      padding-right: $ui-spacing-half
      white-space: nowrap
      font-weight: bold
        
    td:nth-of-type(1)
      &:before
        content: "Name"
      
  	td:nth-of-type(2)
      &:before
        content: "Email"
      
  	td:nth-of-type(3)
      &:before
        content: "Actions"
      
    .btn:nth-of-type(1),
    .btn:nth-of-type(2)
      margin-bottom: $ui-spacing-fourth
      width: calc(50% - 3px)
      
    .btn:nth-of-type(1)
      margin-right: $ui-spacing-fourth
      
    .btn:nth-of-type(3)
      width: 100%